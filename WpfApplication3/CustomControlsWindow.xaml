<Window x:Class="WpfApplication3.CustomControlsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lib="clr-namespace:WpfCustomControlLibrary1;assembly=WpfCustomControlLibrary1"
        Title="CustomControlsWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <lib:ColorPicker Name="colorPicker" ColorChanged="colorPicker_ColorChanged" />
        <StackPanel Grid.Row="1">
            <TextBlock x:Name="tbColor" ClipToBounds="True" />
            
        </StackPanel>
    </Grid>
</Window>
