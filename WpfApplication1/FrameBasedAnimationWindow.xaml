<Window x:Class="WpfApplication1.FrameBasedAnimationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FrameBasedAnimationWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="开始" x:Name="StartButton" Click="StartButton_Click" />
            <Button Content="停止" x:Name="EndButton" Click="EndButton_Click" />
        </StackPanel>
        <Canvas x:Name="canvas">
            
        </Canvas>
    </Grid>
</Window>
